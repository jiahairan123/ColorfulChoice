<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_normal_rl"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_normal_cover_images"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@mipmap/jiazai" />

    <TextView
        android:id="@+id/item_normal_name_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="#050707"
        android:padding="5dp"
        android:text="jdkfjsk"
        android:textColor="#838484"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="275dp"
        android:background="#1f1f1f"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_normal_avatar_url"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/jiazai" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_normal_avatar_url"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_normal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:text="sdfs"
                android:textColor="#9d9d9d"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/item_normal_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="sdfsdf"
                android:textColor="#5c5c5c"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_normal_cry_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@+id/item_normal_smail_iv"
            android:src="@mipmap/cry" />


        <ImageView
            android:id="@+id/item_normal_smail_iv"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:src="@mipmap/smile" />

    </RelativeLayout>


</RelativeLayout>