<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/activity_goodthing_cover_images"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/activity_goodthing_digest"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:textColor="#313030"
        android:text="今天超开心"
        android:textStyle="normal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="7dp" />

    <TextView
        android:id="@+id/activity_goodthing_name"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="雏菊项链"
        android:textColor="#000"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_goodthing_desc"
        android:text="dfs"
        android:textSize="12dp"
        android:textColor="#605d5d"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/activity_goodthing_images"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

        <TextView
            android:background="#000"
            android:text="设计师  作品"
            android:textColor="#fff"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


    </LinearLayout>

    </ScrollView>
</LinearLayout>