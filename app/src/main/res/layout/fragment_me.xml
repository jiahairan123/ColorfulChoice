<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/me_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--背景色-->
            <LinearLayout
                android:background="#111"
                android:layout_width="match_parent"
                android:layout_height="220dp">

            </LinearLayout>

<!--我的画报-->

            <LinearLayout
                android:id="@+id/me_my_picture"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <RelativeLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_pic"
                        android:layout_margin="18dp"
                        android:background="@mipmap/picture_yes"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="#252020"
                        android:textSize="19sp"
                        android:layout_toRightOf="@+id/iv_pic"
                        android:text="我的画报"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>


            <!--关注的设计师-->


            <LinearLayout
                android:id="@+id/me_sign_designer"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <RelativeLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_guanzhu"
                        android:layout_margin="18dp"
                        android:background="@mipmap/picture_yes"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="#252020"
                        android:textSize="19sp"
                        android:layout_toRightOf="@+id/iv_guanzhu"
                        android:text="关注的设计师"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>



            <!--我的心愿单-->


            <LinearLayout
                android:id="@+id/me_wish_list"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <RelativeLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_wodexinyuandan"
                        android:layout_margin="18dp"
                        android:background="@mipmap/picture_yes"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="#252020"
                        android:textSize="19sp"
                        android:layout_toRightOf="@+id/iv_wodexinyuandan"
                        android:text="我的心愿单"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>



            <!--消息中心-->



            <LinearLayout
                android:id="@+id/me_news_center"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <RelativeLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_xiaoxinzhongxin"
                        android:layout_margin="18dp"
                        android:background="@mipmap/picture_yes"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="#252020"
                        android:textSize="19sp"
                        android:layout_toRightOf="@+id/iv_xiaoxinzhongxin"
                        android:text="消息中心"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>


            <!--建议与反馈意见-->




            <LinearLayout
                android:id="@+id/me_advice_question"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <RelativeLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_jianyiyufankuiyijian"
                        android:layout_margin="18dp"
                        android:background="@mipmap/picture_yes"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="#252020"
                        android:textSize="19sp"
                        android:layout_toRightOf="@+id/iv_jianyiyufankuiyijian"
                        android:text="建议与反馈意见"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>




            <LinearLayout

                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            </LinearLayout>





        </LinearLayout>

    </ScrollView>



</android.support.v4.widget.DrawerLayout>